#include "esp_camera.h"
#include <Arduino.h>

// Camera pins for ESP32-CAM, provided on Notion
#define PWDN_GPIO_NUM     32
#define RESET_GPIO_NUM    -1
#define XCLK_GPIO_NUM      0
#define SIOD_GPIO_NUM     26
#define SIOC_GPIO_NUM     27

#define Y9_GPIO_NUM       35
#define Y8_GPIO_NUM       34
#define Y7_GPIO_NUM       39
#define Y6_GPIO_NUM       36
#define Y5_GPIO_NUM       21
#define Y4_GPIO_NUM       19
#define Y3_GPIO_NUM       18
#define Y2_GPIO_NUM        5
#define VSYNC_GPIO_NUM    25
#define HREF_GPIO_NUM     23
#define PCLK_GPIO_NUM     22

void setupCamera();
bool detectRed(camera_fb_t *fb);

void setup() {
    Serial.begin(115200);
    setupCamera();
}

void loop() {
    camera_fb_t *fb = esp_camera_fb_get();

    if (!fb) {
        Serial.println("Camera capture failed");
        delay(1000);
        return;
    }

    if (detectRed(fb)) {
        Serial.println("ðŸ”´ Red detected!");
    } else {
        Serial.println("Not red");
    }

    esp_camera_fb_return(fb);
    delay(500);
}

void setupCamera() {
    camera_config_t config;
    config.ledc_channel = LEDC_CHANNEL_0;
    config.ledc_timer   = LEDC_TIMER_0;
    config.pin_d0 = Y2_GPIO_NUM;
    config.pin_d1 = Y3_GPIO_NUM;
    config.pin_d2 = Y4_GPIO_NUM;
    config.pin_d3 = Y5_GPIO_NUM;
    config.pin_d4 = Y6_GPIO_NUM;
    config.pin_d5 = Y7_GPIO_NUM;
    config.pin_d6 = Y8_GPIO_NUM;
    config.pin_d7 = Y9_GPIO_NUM;
    config.pin_xclk = XCLK_GPIO_NUM;
    config.pin_pclk = PCLK_GPIO_NUM;
    config.pin_vsync = VSYNC_GPIO_NUM;
    config.pin_href = HREF_GPIO_NUM;
    config.pin_sccb_sda = SIOD_GPIO_NUM;
    config.pin_sccb_scl = SIOC_GPIO_NUM;
    config.pin_pwdn  = PWDN_GPIO_NUM;
    config.pin_reset = RESET_GPIO_NUM;
    config.xclk_freq_hz = 20000000;
    config.pixel_format = PIXFORMAT_RGB565;

    config.frame_size = FRAMESIZE_QQVGA;  // Small = faster
    config.jpeg_quality = 12;
    config.fb_count = 1;

    if (esp_camera_init(&config) != ESP_OK) {
        Serial.println("Camera init failed");
        while (true);
    }

    Serial.println("Camera ready");
}

bool detectRed(camera_fb_t *fb) {
    uint32_t redSum = 0, greenSum = 0, blueSum = 0;
    uint8_t *data = fb->buf;

    // extract colors from RGB565 format
    for (int i = 0; i < fb->len; i += 2) {
        uint16_t pixel = (data[i] << 8) | data[i + 1];

        uint8_t r = ((pixel >> 11) & 0x1F) << 3;
        uint8_t g = ((pixel >> 5)  & 0x3F) << 2;
        uint8_t b = ( pixel        & 0x1F) << 3;

        redSum   += r;
        greenSum += g;
        blueSum  += b;
    }
    
    uint32_t totalPixels = fb->len / 2;

    // Calculate average color values
    uint32_t rAvg = redSum / totalPixels;
    uint32_t gAvg = greenSum / totalPixels;
    uint32_t bAvg = blueSum / totalPixels;

    // for debugging: print average colors
    Serial.printf("R:%d G:%d B:%d\n", rAvg, gAvg, bAvg);

    // Red is dominant if significantly higher than green and blue
    if (rAvg > gAvg * 1.4 && rAvg > bAvg * 1.4) {
        return true;
    }

    return false;
}
